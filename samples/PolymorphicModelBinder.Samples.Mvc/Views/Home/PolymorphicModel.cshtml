@using PolymorphicModelBinder.Html
@model Pet
@{
    ViewData["Title"] = "Poylmorphic as model";
}

<div>
    <h1 class="display-4">Poylmorphic as model</h1>

    <p class="lead">
        <a href="@Url.Action("Index", new { type = "Dog" })">Dog</a> or
        <a href="@Url.Action("Index", new { type = "Cat" })">Cat</a>?
    </p>
    
    <hr />

    @using (Html.BeginForm("PolymorphicModel", "Home", FormMethod.Post))
    {
        @Html.PolymorphicTypeInValue()
        @Html.EditorFor(x => x)
        <hr />
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    }
</div>