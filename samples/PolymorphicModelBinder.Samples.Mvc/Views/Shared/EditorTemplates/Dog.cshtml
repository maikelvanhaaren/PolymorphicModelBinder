@model PolymorphicModelBinder.Samples.Mvc.Models.Pets.Dog

<div class="card mb-4">
    <div class="card-header">
        Dog
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-check">
            <input type="checkbox" asp-for="CanBark" class="form-check-input" />
            <label asp-for="CanBark" class="form-check-label"></label>
        </div>
    </div>
</div>